<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graywhite"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/TransparentToolbar">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:titleTextColor="@android:color/black"/>
    <ImageView
        android:id="@+id/bank_card_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/card_amex"
        android:scaleType="fitCenter"
        android:contentDescription="@string/bank_card_image"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        app:layout_constraintEnd_toEndOf="@+id/bank_card_image"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/bank_card_image"
        app:layout_constraintTop_toTopOf="@+id/bank_card_image"/>
    <TextView
        android:textSize="20sp"
        android:textColor="#85848b"
        android:id="@+id/prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:text="靠近读卡器"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank_card_image"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_pay"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/bank_card_image"
        app:lottie_rawRes="@raw/nfc_read_success"/>
</androidx.constraintlayout.widget.ConstraintLayout>
